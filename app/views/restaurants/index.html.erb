<h1 class="text-center">Restaurants</h1>

<ul  class="blockquote">
  <% @restaurants.each do |restaurant| %>
    <figcaption class="figcaptionst-group-item"><%= restaurant.name %></figcaption><br>
    <figcaption class="blockquote-footer"><%= restaurant.address %></figcaption>
    <button class="btn btn-danger"><%= link_to "Delete", restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></button>
  <% end %>
</ul>
